<% cache product do %>
<div class="col-lg-4 col-md-4 col-sm-6">
    <h4 id="productname"><%= link_to product.name, product %></h4>
	<div class="product"><%= link_to(image_tag(product.image_url), product) %>
    <p id="product-index">
        $<%= product.price %></p>
  </div>
   <% if current_user && current_user.admin? %>
     <div class="btn-group">
        <%= link_to 'Show', product, class: "btn btn-default btn-xs" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-default btn-xs" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default btn-xs" %>
      </div>
   <% end %>
</div>