<div id= "products">
    <div class="container">
      <div class ="row">
        <% @products.each do |product| %>
          <div class= "col-xs-6 col-md-4">
            <%= product.name %>
            <%= product.description %>
            <%= product.image_url %>
            <%= product.color %>
            <%= link_to 'Show', product %>
            <%= link_to 'Edit', edit_product_path(product) %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
