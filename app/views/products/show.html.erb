<div class="container">
  <div class="row" id="image">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <% cache @product do %> 
        
        <%= image_tag(@product.image_url, class: 'img-responsive img-zoom', data_zoom_image: @product.image_url) %>
        
    </div>
    
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" id="about">
      <h3>
          <%= @product.name %>
      </h3>
      <p>
        <strong>Color:</strong> <%= @product.colour %>
      </p>
      <p>
        <strong>Price:</strong> $<%= @product.price %>
      </p>
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
      <div class="stripe">
        <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
      </div>
    </div>
    </div>
    <div id="description">
      <p><strong>Description:</strong></p>
      <p>
        <%= @product.description %>
      </p>
    </div>
  <% end %>
  

<div id="comments">
<% if current_user && current_user.admin? %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<% end %>

<%= render 'new_comment' %>
<%= render 'comments' %>
<% end %>
</div>
</div><!-- end container-->