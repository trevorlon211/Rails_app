<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row" id="image">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">  
      <p >
          <%= image_tag(@product.image_url, class: 'img-responsive') %>
      </p>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" id="about">
      <h3>
          <%= @product.name %>
      </h3>
      <p>
       <strong>Price:</strong>
        <%= number_to_currency(@product.price) %>
      </p>
      <p>
        <strong>Color:</strong> <%= @product.colour %>
      </p>
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
      <p>
          <strong>Description:</strong><br><%= @product.description %>
      </p>
      <p>
       <%= form_tag "/payments/create" do %>
       <%= render partial: "shared/stripe_checkout_button" %>
       <% end %>
      </p>

    </div>
  </div>
</div><!-- end container-->


 <%= link_to 'Edit', edit_product_path(@product) %> |
 <%= link_to 'Back', products_path %>

<%= render 'new_comment' %>
<%= render 'comments' %>
